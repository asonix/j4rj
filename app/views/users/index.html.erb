<div class="container">
  <h1>Users</h1>

  <%= link_to 'New user', new_profile_path %>

  <table>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <% if user.id == current_user.id %>
        <td><%= link_to 'Show', profile_path %></td>
    <% else %>
        <td><%= link_to 'Show', profiles_path(user) %></td>
    <% end %>
    </tr>
  <% end %>
  </table>
</div>
